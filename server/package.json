{
  "name": "requestbin",
  "version": "1.0.0",
  "description": "express app that listens for incoming HTTP requests and stores data",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start-mongo": "mongod --dbpath=./data/db > ./data/db/mongo.log",
    "start-app": "nodemon index.js",
    "setup-db": "psql -U postgres -d requestbin -f setup.sql", 
    "start": "concurrently --names \"MONGO,APP\" --prefix \"[{name}]\" \"npm run start-mongo\" \"npm run start-app\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "body-parser": "^2.2.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongoose": "^8.18.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10"
  }
}
